<%- include('../partials/header') %>
<div class="container">
        <h1 style="text-align: center;">Edit <%=campground.name%> </h1>
        <div style="width:30%; margin:30px auto;">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" name="campground[name]" class="form-control" value="<%=campground.name%>">
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <input type="url" name="campground[image]" class="form-control" value="<%=campground.image%>">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <input type="text" name="campground[description]" class="form-control" value="<%=campground.description%>">
                </div>
                <button type="submit" class="btn btn-dark btn-block" style="border: 1px solid fill;">Submit</button>
            </form>
        </div>
        <a href="/campgrounds">Go back</a>
</div>
<%- include ('../partials/footer') %>