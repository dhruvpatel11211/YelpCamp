<%- include('../partials/header') %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>YelpCamp</h1>
            <p>Amazing campgrounds from around the world.</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new campground</a>
            </p>
        </div>
    </header>


    <div class="row text-center" style="display:flex;flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <div class="img-thumbnail">
                <img src="<%= campground.image %>" class="img-fluid">
                <div class="caption">
                    <h5><%= campground.name %></h5>
                </div>
                <p>
                    <a href="/campgrounds/<%= campground.id %>" class="btn btn-primary btn-sm">More Info</a>
                </p>
            </div>
        </div>
        <% }); %>
    </div>
</div>
<%- include('../partials/footer') %>