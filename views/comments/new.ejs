<%- include('../partials/header') %>
<div class="container">
        <h1 style="text-align: center;">Add new Comments to <%= campground.name %> </h1>
        <div style="width:30%; margin:30px auto;">
            <form action="/campgrounds/<%= campground.id %>/comments" method="POST">
                <div class="form-group">
                    <label>Text</label>
                    <input type="text" name="comment[text]" class="form-control" placeholder="text">
                </div>
                <button type="submit" class="btn btn-dark btn-block" style="border: 1px solid fill;">Submit</button>
            </form>
        </div>
        <a href="/campgrounds">Go back</a>
</div>
<%- include ('../partials/footer') %>